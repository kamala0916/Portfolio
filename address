<ul id = "addresses">

 <input type="text" name="address" placeholder="Your Address">
  
  </ul>
  <button type="button" onclick="addAddress()">Add Address</button>
  <br><br>
  <button type="button" input id="submit" name="submit" type="submit" value="Submit" onclick="action">Submit</button>
  
