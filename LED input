pinMode(4, OUTPUT);
Serial.begin(9600);

while (!Serial);

Serial.println("Input 1 to Turn GREEN LED on and 2 to off");
Serial.println("Input 3 to Turn YELLOW LED on and 4 to off");
Serial.println("Input 5 to Turn RED LED on and 6 to off");
}

void loop() {

if (Serial.available())

{

int state = Serial.parseInt();

if (state == 1)

{

digitalWrite(13, HIGH);
//digitalWrite(2, HIGH);
Serial.println("Command completed LED turned ON");

}

if (state == 2)

{

digitalWrite(13, LOW);

Serial.println("Command completed LED turned OFF");

}

if (state == 3)

{
digitalWrite(2, HIGH);
Serial.println("Command completed LED turned ON");

}

if (state == 4)

{
digitalWrite(2, LOW);
Serial.println("Command completed LED turned ON");

}

if (state == 5)


digitalWrite(4, HIGH);

Serial.println("Command completed LED turned ON");

if (state == 6)

{

digitalWrite(4, LOW);

Serial.println("Command completed LED turned OFF");

}

}
}
